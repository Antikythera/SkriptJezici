<h1>Listing users</h1>

<p>
  <%= link_to 'New user', new_user_path %>
</p>

<table>
  <tr>
    <th>Username</th>
    <th colspan="2"></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= link_to 'Show', user_path(user)%></td>
      <td><%= link_to 'Edit', edit_user_path(user)%></td>
      <td><%= link_to 'Delete', user_path(user),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
